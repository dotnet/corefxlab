<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Date and Time helper classes</Description>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <PackageTags>Date TimeOfDay Time corefxlab</PackageTags>
    <RootNamespace />
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Diagnostics.Contracts" Version="$(CoreFxStableVersion)" />
    <PackageReference Include="System.Runtime.Serialization.Formatters" Version="$(CoreFxStableVersion)" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Properties\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Properties\Strings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
      <CustomToolNamespace>System</CustomToolNamespace>
    </EmbeddedResource>
  </ItemGroup>
</Project>
